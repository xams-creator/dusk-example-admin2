{
    "name": "@dusk-example-admin2/monorepo",
    "private": true,
    "scripts": {
        "start": "lerna run start  --parallel",
        "start:admin": "lerna run start --scope @dusk-example-admin2/dusk-example-admin  --parallel",
        "start:router": "lerna run start --scope @dusk-example-admin2/dusk-example-router  --parallel",
        "build:router": "lerna run build --scope @dusk-example-admin2/dusk-example-router  --parallel",
        "start:all": "lerna run start --scope @dusk-example-admin2/dusk-example-router --scope @dusk-example-admin2/dusk-example-hash-app --scope @dusk-example-admin2/dusk-example-browser-app  --parallel",
        "jest": "jest",
        "prettier": "prettier --write .",
        "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
        "changelog:init": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0"
    },
    "workspaces": [
        "packages/*"
    ],
    "gitHooks": {
        "commit-msg": "commitlint -e -V",
        "pre-commit": "lint-staged"
    },
    "prettier": {
        "semi": true,
        "singleQuote": true,
        "tabWidth": 4,
        "printWidth": 120,
        "useTabs": false,
        "jsxSingleQuote": false,
        "bracketSpacing": true,
        "htmlWhitespaceSensitivity": "css",
        "arrowParens": "avoid",
        "endOfLine": "crlf",
        "trailingComma": "es5",
        "importOrderSeparation": true,
        "importOrder": [
            "^react(.*)$",
            "<THIRD_PARTY_MODULES>",
            "^@/(.*)$",
            "^src/(.*)$",
            "^[./]"
        ],
        "importOrderSortSpecifiers": true,
        "plugins": [
            "@trivago/prettier-plugin-sort-imports"
        ],
        "importOrderParserPlugins": [
            "typescript",
            "jsx",
            "decorators"
        ]
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ],
        "rules": {
            "type-enum": [
                2,
                "always",
                [
                    "build",
                    "ci",
                    "chore",
                    "docs",
                    "feat",
                    "fix",
                    "perf",
                    "refactor",
                    "revert",
                    "style",
                    "test",
                    "deps",
                    "upgrade"
                ]
            ]
        }
    },
    "lint-staged": {
        "packages/**/src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
            "prettier --write"
        ]
    },
    "jest": {
        "preset": "ts-jest/presets/default-esm",
        "testEnvironment": "node"
    },
    "devDependencies": {
        "lerna": "^8.1.5",
        "prettier": "^3.3.2",
        "typescript": "^5.5.3",
        "jest": "^29.7.0",
        "ts-jest": "^29.1.5",
        "@types/jest": "^29.5.12",
        "@commitlint/cli": "^19.3.0",
        "@commitlint/config-conventional": "^19.2.2",
        "yorkie": "^2.0.0",
        "lint-staged": "^15.2.7",
        "@trivago/prettier-plugin-sort-imports": "^4.3.0",
        "conventional-changelog-cli": "^4.1.0"
    }
}
